                            <td>FullName</td>
                            <td>
                                <input asp-for="BusinessProperties.BusinessFullName" class="form-control" placeholder="FullName" />
                                <span asp-validation-for="BusinessProperties.BusinessFullName" class="text-denger"></span>
                                @Html.TextBox("PersonFullName", null, htmlAttributes: new { @class = "form-control" })
                            </td>
                        </tr>
                        <tr>
                            <td>EMail</td>
                            <td>
                                <input asp-for="BusinessProperties.BusinessEmail" class="form-control" placeholder="FullName" />
                                <span asp-validation-for="BusinessProperties.BusinessEmail" class="text-denger"></span>
                                @Html.TextBox("PersonFullName", null, htmlAttributes: new { @class = "form-control" })
                            </td>
                        </tr>

                    </table>
                </td>
            </tr>
        </table>*@
    }
</body>
</html>
