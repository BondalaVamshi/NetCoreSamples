@model ViewsDataTransfor.ViewModel.InputDataOutput;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @using (Html.BeginForm("SubmitPerson", "InputData", FormMethod.Post))
    {
        <div class="text-denger" asp-validation-summary="ModelOnly"></div>
        <h1>Business details</h1>
      


        <div class="form-group row">
            <div class="col-6">
                <h6>Name</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessFullName" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessFullName" class="text-denger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <h6>EMail</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessEmail" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessEmail" class="text-denger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <h6>Phone Number</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessPhoneNumber" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessPhoneNumber" class="text-denger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <h6>Plan</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessPlan" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessPlan" class="text-denger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <h6>Billing Intervel</h6>
            </div>
            <div class="col-6">
                <select asp-for="BusinessProperties.BusinessBillingIntervel" class="form-control" asp-items="Html.GetEnumSelectList<Intervel>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <div class="col-12">
                    <h6>Country</h6>
                </div>
                <div class="col-12">
                    <select asp-for="BusinessProperties.BusinessCountry" class="form-control" asp-items="Html.GetEnumSelectList<Country>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="col-12">
                    <h6>State</h6>
                </div>
                <div class="col-12">
                    <select asp-for="BusinessProperties.BusinessState" class="form-control" asp-items="Html.GetEnumSelectList<State>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <div class="col-12">
                    <h6>City</h6>
                </div>
                <div class="col-12">
                    <select asp-for="BusinessProperties.BusinessCity" class="form-control" asp-items="Html.GetEnumSelectList<City>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="col-6">
                    <h6>PostalCode</h6>
                </div>
                <div class="col-12">
                    <input asp-for="BusinessProperties.BusinessPostalCode" class="form-control" placeholder="PostalCode" />
                    <span asp-validation-for="BusinessProperties.BusinessPostalCode" class="text-denger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">

            <div class="col-6">
                <h6>Street Address</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessStreetAddress" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessStreetAddress" class="text-denger"></span>
            </div>

        </div>
        <div class="form-group row">
          
        </div>
        <div class="form-group row">
            <div class="col-6">
                <h6>Old Password</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessOldPassword" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessOldPassword" class="text-denger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <h6>New Password</h6>
            </div>
            <div class="col-12">
                <input asp-for="BusinessProperties.BusinessNewPassword" class="form-control" />
                <span asp-validation-for="BusinessProperties.BusinessNewPassword" class="text-denger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-9"></div>
            <div class="col-3">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>



