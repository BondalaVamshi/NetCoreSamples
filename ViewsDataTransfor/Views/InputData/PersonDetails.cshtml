@model ViewsDataTransfor.Models.PersonPropertie;    

@using (Html.BeginForm("PersonOutputView", "InputData", FormMethod.Post))
{
    <div class="text-denger" asp-validation-summary="All"></div>
    <h1>Person Details</h1>
    <div class="form-group row">
        <div class="col-6">

            <label asp-for="PersonFullName" class="control-label"></label>
            @*<h6>Name</h6>*@
        </div>
        <div class="col-12">
            <input asp-for="PersonFullName" class="form-control" />
            <span asp-validation-for="PersonFullName" class="text-denger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonEmail" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonEmail" class="form-control" />
            <span asp-validation-for="PersonEmail" class="text-denger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonPhoneNumber" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonPhoneNumber" class="form-control" />
            <span asp-validation-for="PersonPhoneNumber" class="text-denger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonPlan" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonPlan" class="form-control" />
            <span asp-validation-for="PersonPlan" class="text-denger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonBillingIntervel" class="control-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="PersonBillingIntervel" class="form-control" asp-items="Html.GetEnumSelectList<Intervel>()">
                <option selected="selected" value="">Please select</option>
            </select>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <div class="col-12">
                <label asp-for="PersonCountry" class="control-label"></label>
            </div>
            <div class="col-12">
                @Html.Partial("_Country")
                @*<select asp-for="PersonCountry" class="form-control" asp-items="Html.GetEnumSelectList<Country>()">
                    <option selected="selected" value="">Please select</option>
                </select>*@
            </div>
        </div>
        <div class="col-6">
            <div class="col-12">
                <label asp-for="PersonState" class="control-label"></label>
            </div>
            <div class="col-12">
                @*<select asp-for="PersonState" class="form-control" asp-items="Html.GetEnumSelectList<State>()">
                    <option selected="selected" value="">Please select</option>
                </select>*@
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <div class="col-12">
                <label asp-for="PersonCity" class="control-label"></label>
            </div>
            <div class="col-12">
                @*<select asp-for="PersonCity" class="form-control" asp-items="Html.GetEnumSelectList<City>()">
                    <option selected="selected" value="">Please select</option>
                </select>*@
            </div>
        </div>
        <div class="col-6">
            <div class="col-6">
                <label asp-for="PersonPostalCode" class="control-label"></label>
            </div>
            <div class="col-12">
                <input asp-for="PersonPostalCode" class="form-control" placeholder="PostalCode" />
                <span asp-validation-for="PersonPostalCode" class="text-denger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">

        <div class="col-6">
            <label asp-for="PersonStreetAddress" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonStreetAddress" class="form-control" />
            <span asp-validation-for="PersonStreetAddress" class="text-denger"></span>
        </div>

    </div>
    <div class="form-group row">

    </div>
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonOldPassword" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonOldPassword" class="form-control" />
            <span asp-validation-for="PersonOldPassword" class="text-denger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-6">
            <label asp-for="PersonNewPassword" class="control-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="PersonNewPassword" class="form-control" />
            <span asp-validation-for="PersonNewPassword" class="text-denger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-9"></div>
        <div>
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>

}}