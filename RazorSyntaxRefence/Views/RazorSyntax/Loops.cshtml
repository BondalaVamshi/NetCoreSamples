<h1 class="bg-light">Welcome to Loops</h1>
@{
    int a = 10;
    string ls = "";
    var list = new List<int> { 1, 2, 3, 4, 5 };
}

<h2>for loop</h2>
@for (int i = 0; i < @a; i++)
{
    if (i < 3)
    {
        <h6>This is  For @i</h6>
    }
}
@for (int i = 0; i < 2; i++)
{

    for (int j = 0; j < 2; j++)
    {
        ls = ls + "*" + " ";
        <h1>@ls</h1>
    }

}


<br />
<hr />
<h2>Foreach loop</h2>
@foreach (var item in list)
{
    <h5>@item</h5>
}